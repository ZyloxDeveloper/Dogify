                      "close@common.close_button_panel":{
                         "$close_button_texture":"textures/ui/button_close_interact",
                         "size": ["20px", "20px"]
                      }
                   }
                ]
             }
          },
          {
             "pressed":{
               "layer":2,
               "type":"panel",
               "size":[
                  "100%c",
                  "100%c"
               ],
                "controls":[
                   {
                      "close@common.close_button_panel":{
                         "$close_button_texture":"textures/ui/button_close_interact",
                         "size": ["20px", "20px"]
                      }
                   }
                ]
