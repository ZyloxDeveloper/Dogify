{
    "namespace":"btn_close",
    "btn_close@common.close_button":{
       "$default_button_alpha":1,
       "anchor_from":"top_right",
       "anchor_to":"top_right",
       "offset":["-1%", "0.25%"],
       "layer":6,
       "controls":[
          {
             "default":{
                "layer":2,
                "type":"panel",
                "size":[
                   "100%c",
